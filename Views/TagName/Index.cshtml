@model IEnumerable<TagName>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-lg-6">
        <h2 class="text-info">Tag Name List</h2>
    </div>
    <div class="col-lg-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; New Tag Name</a>
    </div>
</div>
<hr />
<div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td> @item.Name</td>
                <td style="width:150px">
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
