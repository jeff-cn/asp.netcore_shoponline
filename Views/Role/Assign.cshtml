@model UserRoleDto
@{
    ViewData["Title"] = "Assign";
}
<br />
<h2 class="text-info">Assign Role</h2>
<hr />
@if (ViewBag.haveRole != null) {
    <h3 class="text-danger">@ViewBag.haveRole</h3>
}
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="col-lg-8">
        <div class="rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="form-group row">
            <div class=" col-lg-2">
                <label for="UserId">User</label>
            </div>
            <div class="col-lg-5">
                <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class=" col-lg-2">
                <label for="RoleId">Role</label>
            </div>
            <div class="col-lg-5">
                <select asp-for="RoleId" asp-items="Model.Roles" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="UserRole" class="btn btn-outline-secondary">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}