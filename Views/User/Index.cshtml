@model IEnumerable<User>;
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-lg-6">
        <h2 class="text-info">User List</h2>
    </div>
</div>
<hr />
<div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    Active
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td> @item.Email</td>

                    @if (item.LockoutEnd == null) {
                        <td>Yes</td>
                    } else {
                        <td>No</td>
                    }

                    <td style="width:150px">
                        <div class="btn-group">
                            @if (item.LockoutEnd == null) {
                                <a asp-action="DeactiveUser" class="btn btn-warning" asp-route-id="@item.Id">Deactive</a>
                            } else {
                                <a asp-action="ActiveUser" class="btn btn-success" asp-route-id="@item.Id">Active</a>
                            }
                            <a asp-action="DeleteUser" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>